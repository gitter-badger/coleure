<section id="palette">
  <div id="drop-message" class="dropzone">
    <div class="content">
      <p><i class="drop"></i><br>Drop your favorite<br>colors here.</p>
      <hr>
      <p><a href="/about" id="learnMoreLink">Learn more</a> about <br>the project.</p>
    </div>
  </div>
  <div id="palette_colors" class="clear b10"></div>
  <header class="select">
    <h1 class="subtitle">
      <span id="activePalette" class="active-palette">New</span>
    </h1>
    <h2>Palette</h2>
  </header>
</section>
<aside id="panels">
  <section id="inspector">
    <div id="preview">
      <div id="mixPanel">
        <button id="mixButton">Mix</button>
        <div id="mixControls">
            <input id="mixBalance" type="range" min="0.01" max="0.99" step="0.01" value="0.5">
          </div>
        <div id="mixResult">
          <span id="mixWeightA">50%</span>
          <span id="mixWeightB">50%</span>
          <button id="cancelMix" class="join">Cancel</button><button id="selectMix" class="color">Select</button>
        </div>
      </div>
      <div id="subjects" class="clear"></div>
    </div>
    <div id="tests" class="clear"></div>
  </section>
  <div class="the-rest">
    <section class="subject-options">
      <div class="column">
        <a id="compareModeButton" class="block-button"><i class="compare-icon"></i><br>Compare</a>
        <a id="editPanelButton" class="block-button"><i class="edit-icon"></i><br>Edit</a>
      </div>
      <div class="column">
        <a id="mixModeButton" class="block-button"><i class="mix-icon"></i><br>Mix</a>
        <a id="addToPaletteButton" class="block-button"><i class="add-to-palette-icon"></i><br>Add to Palette</a>
        <a id="removeButton" class="block-button"><i class="remove-icon"></i><br>Remove</a>
      </div>
    </section>
    <aside id="editPanel" class="color-editor">
      <section class="top">
        <header><label for="#">Code*</label></header>
        <div><input type="text" id="colorCode"></div>
      </section>
      <section>
        <header><label for="colorHueValue">H</label><input type="number" min="1" max="360" id="colorHueValue"></header>
        <div><input id="colorHueRange" type="range" min="1" max="360" step="1"></div>
      </section>
      <section>
        <header><label for="colorSaturationValue">S</label><input type="number" min="1" max="100" id="colorSaturationValue"></header>
        <div><input id="colorSaturationRange" type="range" min="0" max="100" step="1"></div>
      </section>
      <section>
        <header><label for="colorLightValue">L</label><input type="number" min="1" max="100" id="colorLightValue"></header>
        <div><input id="colorLightRange" type="range" min="0" max="100" step="1"></div>
      </section>
      <section>
        <header><label for="#">Name</label></header>
        <div><input type="text" id="colorName"></div>
      </section>
      <section class="push-header">
        <button id="exitEditPanelButton" class="secondary">Done</button>
      </section>
      <footer>* Only HEX allowed for now.</footer>
    </aside>
  </div>
</aside>
<section id="library">
  <nav id="user_menu">
    <a id="userMenuNewPaletteButton" class="block-button active"><i class="menu-plus"></i><br>New Palette</a>
    <a id="userMenuEditorButton" class="block-button active" style="display: none;"><i class="menu-panel"></i><br>Editor</a>
    <% if current_user %>
      <a class="block-button" href="/users/<%= current_user.id %>"><i class="menu-palettes"></i><br>My Palettes</a>
      <a class="block-button" href="#"><i class="menu-settings"></i><br>Settings</a>
      <a class="block-button" href="/logout"><i class="menu-exit"></i><br>Logout</a>
    <% else %>
      <a class="block-button" href="/login"><i class="menu-lock"></i><br>Login</a>
      <a class="block-button" href="/users/new"><i class="menu-user"></i><br>Sign Up<br><span id="appPrice" class="price">$10/yr</span></a>
    <% end %>
  </nav>
  <div id="colors"></div>
</section>
