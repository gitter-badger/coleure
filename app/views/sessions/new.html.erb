<% content_for :title, "Login - Coleure" %>

<h1>Login</h1>

<%= form_tag sessions_path do %>
	<p>
		<%= label_tag :email %>
		<%= email_field_tag :email %>
	</p>
	<p>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</p>
	<p>
		<%= submit_tag "Login" %>
		<a href="#">Forgot your password?</a>
	</p>
<% end %>
