  <div id="shared_palette_colors" class="active-palette">
  	<% for color in @palette.colors.reorder('position DESC') %>
	    <article
	      class="item color"
	      data-name="<%= color.name %>"
	      data-hex="<%= color.hex %>"
	      data-rgb="<%= color.rgb %>"
	      data-hsl="<%= color.hsl %>"
	      data-mixed="<%= color.mixed %>"
	      data-origin="palette"
	      style="background: #<%= color.hex %>;">
	      <h1><% if color.mixed %><strong class="mix-mark">M</strong><% end %><%= color.name %></h1>
	      <% if false %>
		      <section class="color-info">
		        <h1><%= color.name %></h1>
		        <p>Top part of the flag.<br>Height: 2/4.</p><p><button class="secondary">Edit</button></p>
